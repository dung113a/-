@{
    Layout = null;
}

@model dynamic
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">


    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background: url('../image/anhnen.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            padding: 40px;
            width: 350px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            color: #fff;
            text-align: center;
        }

        .input-group {
            margin-bottom: 20px;
        }

            .input-group input {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                background: rgba(255, 255, 255, 0.2);
                color: #fff;
                outline: none;
            }

        .options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .social-login {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

            .social-login button {
                border: none;
                color: #fff;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                font-weight: bold;
            }

        .google-btn {
            background-color: #db4437;
        }

        .facebook-btn {
            background-color: #3b5998;
        }

        .login-btn {
            background-color: #00bcd4;
            border: none;
            color: #fff;
            padding: 10px 15px;
            border-radius: 5px;
            width: 100%;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>單打不獨鬥</h2>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message" style="color: red;">@ViewBag.ErrorMessage</div>
        }
        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="input-group">
                <input type="text" name="Uacc" placeholder="Username" required />
            </div>
            <div class="input-group">
                <input type="password" name="pwd" placeholder="Password" required />
            </div>
            <div class="options">
                <label><input type="checkbox" name="remember" /> 記住我</label>
                <a href="#" style="color: #00bcd4; text-decoration: none;">忘記密碼?</a>
                
            </div>
            <button type="submit" class="login-btn">登入</button>
        </form>

        <div class="social-login">
            <button class="google-btn">Google</button>
            <button class="facebook-btn">Facebook</button>
            <a href="#" style="color: #00bcd4; text-decoration: none;">註冊</a>
        </div>
    </div>
</body>
</html>
